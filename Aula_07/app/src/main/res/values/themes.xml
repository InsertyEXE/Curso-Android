        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_dynamic_color</item>
        <item name="colorPrimaryDark">@color/my_dynamic_color</item>
        <item name="colorPrimaryVariant">@color/my_dynamic_color</item>
